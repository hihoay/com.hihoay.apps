<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="vertical"

    android:padding="@dimen/_5sdp">

    <com.appbroker.roundedimageview.RoundedImageView
        android:id="@+id/imv_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_140sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.appbroker.roundedimageview.RoundedImageView
            android:id="@+id/imv_icon"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:radius="@dimen/_16sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/imv_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"

                android:scrollHorizontally="true"
                android:singleLine="true"
                tools:text="Crown Heart - Photo Editor" />


            <TextView
                android:id="@+id/imv_short"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                tools:text="Make your photos be cool and attractive" />

            <TextView
                android:id="@+id/tv_ad_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_2sdp"
                android:drawableLeft="@drawable/ad_cross_tag"
                android:drawablePadding="@dimen/_8sdp"
                android:gravity="center"
                android:text="⭐ 4.5 ⬇ 100,000+ ️" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_check"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/bg_btn_cross_action"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="GET" />

    </LinearLayout>

</LinearLayout>